function enterPress(e){
    if(e.keyCode==13){
        searchFunction();
        return false;
    }
    else 
    {
    return true;
    }
    
}
      
function onEnterprs(thisElem,e,param)
 {
    
    if(e.keyCode==13)
    {
        if(e.preventDefault) 
            e.preventDefault();
        else
            e.returnValue = false;
        
