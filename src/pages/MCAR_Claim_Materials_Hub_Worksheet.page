{
    helptext='Missing Items</br>Wrong Items</br>Incomplete/missing delivery</br>late delivery</br>Transport problems';
}
else
{
helptext='';
}
//document.getElementById(b).innerHTML='hi31</br>hirt';
document.getElementById(b).innerHTML=helptext;

  return (key != 13);
}

    
</script>
